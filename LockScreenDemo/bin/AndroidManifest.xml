<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xian.locktime"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.xian.locktime.LockActivity"
            android:label="@string/app_name"
           android:theme="@style/Theme.AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <service android:name="com.xian.locktime.ScreenStateListenerService"></service>

    <receiver android:name="com.xian.locktime.SceenCloseDeviceAdminReceiver">
    <meta-data
        android:name="android.app.device_admin"
        android:resource="@xml/my_admin" />
	    <intent-filter>
	       <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
	    </intent-filter>
	</receiver>
    <meta-data
        android:name="android.app.device_admin"
        android:resource="@xml/my_admin" />
	    <intent-filter>
	       <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
	    </intent-filter>
        <receiver
        android:name="com.xian.locktime.BootAutoStratBroadcastReceiver">  
        <intent-filter>
            <action android:name="android.intent.action.BOOT_COMPLETED" />
        </intent-filter>
    </receiver>
    </application>

</manifest>
